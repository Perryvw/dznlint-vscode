{
    "name": "dznlint-vscode",
    "displayName": "dznlint for VSCode",
    "description": "Static analysis and coding style errors for Dezyne code.",
    "version": "0.0.21",
    "repository": "https://github.com/Perryvw/dznlint-vscode",
    "author": {
        "name": "Perryvw",
        "url": "https://github.com/Perryvw"
    },
    "publisher": "Dznlint",
    "engines": {
        "vscode": "^1.64.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:dzn"
    ],
    "files": [
        "./out/**/*.js"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "dznlint",
            "properties": {
                "dznlint.includePaths": {
                    "description": "Include paths to use while resolving .dzn imports, separated by ;",
                    "type": "string",
                    "default": ""
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/node": "14.x",
        "@types/vscode": "^1.64.0",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "@vscode/test-electron": "^2.0.3",
        "eslint": "^8.6.0",
        "prettier": "^2.5.1",
        "typescript": "^5.3.3",
        "vsce": "^2.11.0"
    },
    "dependencies": {
        "dznlint": "^0.0.28-alpha.1"
    }
}
